<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/image_finance"
        android:label="@string/app_name"
        android:roundIcon="@drawable/image_finance"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinanceControl"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:exported="true" />

        <activity
            android:name=".RegisterActivity"
            android:exported="true" />

        <activity
            android:name=".AccountActivity"
            android:exported="true" />

        <activity
            android:name=".ReportActivity"
            android:exported="true" />

        <activity
            android:name=".AddTransactionActivity"
            android:exported="true" />

        <activity
            android:name=".EditTransactionActivity"
            android:exported="true" />

        <activity
            android:name=".BudgetActivity"
            android:exported="true" />
        <activity
            android:name=".ViewAccountsActivity"
            android:exported="true" />
        <activity
            android:name=".ViewBudgetsActivity"
            android:exported="true" />
    </application>

</manifest>